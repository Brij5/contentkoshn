# Application Environment
NODE_ENV=development # development, production, test
PORT=5000 # Server port

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/contentkosh # MongoDB connection URI

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here # At least 32 characters long
JWT_EXPIRE=30d # Token expiration time (30 days)
JWT_COOKIE_EXPIRE=30 # Cookie expiration in days

# Email Configuration (Choose either SMTP or Gmail)
# For Gmail
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your_email@gmail.com # Gmail address
EMAIL_PASSWORD=your_app_specific_password # Gmail app-specific password
EMAIL_FROM=noreply@contentkosh.com

# For SMTP (e.g., Mailtrap for development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password

# Client Configuration
CLIENT_URL=http://localhost:3000 # React app URL

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000 # 10 minutes
RATE_LIMIT_MAX_REQUESTS=100 # Maximum requests per window

# File Upload
MAX_FILE_SIZE=5000000 # Maximum file size in bytes (5MB)
UPLOAD_PATH=uploads # Upload directory path

# Application Info
APP_NAME=ContentKosh
FROM_EMAIL=noreply@contentkosh.com
FROM_NAME=ContentKosh 